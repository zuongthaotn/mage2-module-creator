<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">{{module_name_lower}}_{{interface_name_lower}}_listing.{{module_name_lower}}_{{interface_name_lower}}_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New</label>
            </button>
        </buttons>
        <spinner>{{module_name_lower}}_{{interface_name_lower}}_columns</spinner>
        <deps>
            <dep>{{module_name_lower}}_{{interface_name_lower}}_listing.{{module_name_lower}}_{{interface_name_lower}}_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="{{module_name_lower}}_{{interface_name_lower}}_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">{{interface_name_lower}}_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>{{namespace}}_{{module_name}}::{{interface_name_lower}}s</aclResource>
        <dataProvider class="{{namespace}}\{{module_name}}\Ui\Component\DataProvider" name="{{module_name_lower}}_{{interface_name_lower}}_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>{{interface_name_lower}}_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="{{module_name_lower}}_{{interface_name_lower}}_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">{{module_name_lower}}_{{interface_name_lower}}_listing.{{module_name_lower}}_{{interface_name_lower}}_listing.{{module_name_lower}}_{{interface_name_lower}}_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>{{interface_name_lower}}_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="{{interface_name_lower}}_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="is_enable" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="{{namespace}}\{{module_name}}\Model\{{interface_name}}\Source\IsEnable"/>
                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Is Enable</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="{{namespace}}\{{module_name}}\Ui\Component\Listing\Column\{{interface_name}}Actions">
            <settings>
                <indexField>{{interface_name_lower}}_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
